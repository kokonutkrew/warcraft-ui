{
  "type": "skin",
  "name": "default",
  "templates": {
    "button": {
      "borderThickness": 1,
      "borderBrush": {
        "color": [ 0.75, 0.75, 0.75 ]
      },
      "padding": [ 5, 3, 5, 3 ]
    },
    "checkbox": {
      "contentContainer": {
        "type": "stackpanel",
        "orientation": "horizontal",
        "children": [
          {
            "type": "textblock",
            "text": "☐",
            "font": {
              "height": 18
            },
            "padding": [ 3, 0, 3, 0 ],
            "hooks": {
              "onUnchecked": {
                "elementType": "checkbox",
                "event": "onUnchecked",
                "eventHandler": {
                  "type": "style",
                  "styleName": "onUnchecked"
                }
              },
              "onChecked": {
                "elementType": "checkbox",
                "event": "onChecked",
                "eventHandler": {
                  "type": "style",
                  "styleName": "onChecked"
                }
              },
              "onIndeterminate": {
                "elementType": "checkbox",
                "event": "onIndeterminate",
                "eventHandler": {
                  "type": "style",
                  "styleName": "onIndeterminate"
                }
              }
            },
            "styles": {
              "onUnchecked": {
                "text": "☐"
              },
              "onChecked": {
                "text": "☑"
              },
              "onInderminate": {
                "text": "▣"
              }
            }
          }
        ]
      }
    },
    "combobox.popup": {
      "type": "popup",
      "content": {
        "type": "listbox",
        "eventHandlers": {
          "onItemSelected": {
            "type": "forward",
            "elementType": "combobox",
            "event": "onListBoxItemSelected"
          },
          "onItemDeselected": {
            "type": "forward",
            "elementType": "combobox",
            "event": "onListBoxItemDeselected"
          },
          "onSelectionChanged": {
            "type": "forward",
            "elementType": "combobox",
            "event": "onListBoxSelectionChanged"
          }
        }
      }
    },
    "combobox": {
      "type": "combobox",
      "padding": [ 1, 1, 1, 1 ],
      "borderThickness": 1,
      "borderBrush": {
        "color": [ 0.75, 0.75, 0.75 ]
      },
      "backgroundBrush": {
        "color": [ 0.2, 0.2, 0.2 ]
      },
      "hooks": {
        "onListBoxItemMouseButtonMove": {
          "elementType": "listbox",
          "event": "onItemMouseButtonMove",
          "flags": "descendant",
          "eventHandler": {
            "type": "forward",
            "flags": "self",
            "event": "onListBoxItemMouseButtonMove"
          }
        }
      },
      "popup": {
        "jsonTemplate": "combobox.popup"
      },
      "contentContainer": {
        "type": "dockpanel",
        "padding": [ 1, 1, 1, 1 ],
        "children": [
          {
            "type": "button",
            "_dock": "right",
            "padding": 2,
            "font": { "height": 8 },
            "minSize": [ 12, 12 ],
            "borderThickness": 0,
            "verticalAlignment": "center",
            "content": "▼",
            "eventHandlers": {
              "onMouseButtonMove": {
                "type": "forward",
                "elementType": "combobox",
                "event": "onPopupButtonMouseButtonMove"
              }
            }
          }
        ]
      }
    },
    "comboboxselection": {
      "type": "border",
      "itemAs": "child",
      "padding": [ 2, 2, 2, 2 ],
      "margin": [ 1, 1, 1, 1 ],

      "horizontalAlignment": "left",
      "verticalAlignment": "center",
      "eventHandlers": {
      }
    },
    "popup.panel": {
      "type": "panel",
      "padding": [ 1, 1, 1, 1 ],
      "borderThickness": 1,
      "borderBrush": {
        "color": [ 0.75, 0.75, 0.75 ]
      },
      "backgroundBrush": {
        "color": [ 0.2, 0.2, 0.2 ]
      }
    },
    "popup": {
      "contentContainer": {
        "jsonTemplate": "popup.panel"
      }
    },
    "contextmenu": {
      "type": "contextmenu",
      "defaultItemViewTemplate": "contextmenuitem",
      "padding": [ 1, 1, 1, 1 ],
      "borderThickness": 1,
      "borderBrush": {
        "color": [ 0.75, 0.75, 0.75 ]
      },
      "contentContainer": {
        "type": "scrollviewer"
      },
      "content": {
        "type": "stackpanel",
        "uniform": true,
        "backgroundBrush": {
          "color": [ 0.2, 0.2, 0.2 ]
        }
      }
    },
    "contextmenuitem": {
      "jsonTemplate": "itemview",
      "styles": {
        "gotMouseOver": {
          "backgroundBrush": {
            "color": [ 0.0, 0.0, 0.3 ]
          },
          "font": {
            "bold": true
          },
          "color": [ 1.0, 1.0, 0 ]
        },
        "lostMouseOver": {
          "backgroundBrush": {
            "color": [ 0.0, 0.0, 0.0, 0.0 ]
          },
          "font": {
            "bold": false
          },
          "color": [ 1.0, 1.0, 1.0 ]
        }
      }
    },
    "listbox": {
      "defaultItemViewTemplate": "listboxitem",
      "padding": [ 1, 1, 1, 1 ],
      "borderThickness": 1,
      "borderBrush": {
        "color": [ 1.0, 1.0, 1.0 ]
      },
      "contentContainer": {
        "type": "scrollviewer"
      },
      "content": {
        "type": "stackpanel",
        "uniform": true,
        "backgroundBrush": { "color": [ 0, 0, 0 ] }
      }
    },
    "itemview": {
      "type": "itemview",
      "padding": [ 2, 2, 2, 2 ],
      "margin": [ 1, 1, 1, 1 ],
      "eventHandlers": {
        "onMouseButtonMove": {
          "type": "forward",
          "elementType": "itemlist",
          "event": "onItemMouseButtonMove"
        }
      },
      "styles": {
        "onSelected": {
          "backgroundBrush": {
            "color": [ 0.0, 0.0, 0.3 ]
          }
        },
        "onDeselected": {
          "backgroundBrush": {
            "color": [ 0.0, 0.0, 0.0, 0.0 ]
          }
        }
      }
    },
    "listboxitem": {
      "jsonTemplate": "itemview",
      "styles": {
        "gotMouseOver": {
          "font": {
            "bold": true
          },
          "color": [ 1.0, 1.0, 0 ]
        },
        "lostMouseOver": {
          "font": {
            "bold": false
          },
          "color": [ 1.0, 1.0, 1.0 ]
        }
      }
    },
    "expander": {
      "contentContainer": {
        "type": "panel",
        "hooks": {
          "onExpanded": {
            "elementType": "expander",
            "event": "onExpanded",
            "eventHandler": {
              "type": "style",
              "styleName": "onExpanded"
            }
          },
          "onCollapsed": {
            "elementType": "expander",
            "event": "onCollapsed",
            "eventHandler": {
              "type": "style",
              "styleName": "onCollapsed"
            }
          }
        },
        "styles": {
          "onExpanded": {
            "visibility": "visible"
          },
          "onCollapsed": {
            "visibility": "collapsed"
          }
        }
      },
      "headerContainer": {
        "type": "stackpanel",
        "orientation": "horizontal",
        "children": [
          {
            "type": "textblock",
            "text": "⮝",
            "padding": 3,
            "hooks": {
              "onExpanded": {
                "elementType": "expander",
                "event": "onExpanded",
                "eventHandler": {
                  "type": "style",
                  "styleName": "onExpanded"
                }
              },
              "onCollapsed": {
                "elementType": "expander",
                "event": "onCollapsed",
                "eventHandler": {
                  "type": "style",
                  "styleName": "onCollapsed"
                }
              }
            },
            "styles": {
              "onExpanded": {
                "text": "⮟"
              },
              "onCollapsed": {
                "text": "⮝"
              }
            }
          }
        ]
      }
    },
    "imagebox": {
      "scaleToFit": false
    },
    "progressbar": {
      "borderThickness": 1,
      "borderBrush": { "color": [ 1.0, 1.0, 1.0 ] },
      "fillerBrush": { "color": [ 0, 0, 1.0 ] },
      "text": "percent",
      "textblock": {
        "type": "textblock",
        "padding": 3,
        "horizontalAlignment": "center",
        "verticalAlignment": "center"
      }
    },
    "screen": {
      "font": {
        "face": "Arial",
        "height": 14,
        "fixed": false,
        "bold": false
      }
    },
    "scrollbar": {
      "type": "scrollbar",
      "borderThickness": 1,
      "borderBrush": { "color": [ 1.0, 1.0, 1.0 ] },
      "increment": 3
    },
    "scrollbarHorizontal": {
      "jsonTemplate": "scrollbar",
      "height": 16,
      "font": {
        "face": "Arial",
        "height": 8,
        "fixed": false,
        "bold": false
      },
      "fromEdge": "left",
      "decButton": {
        "type": "button",
        "_dock": "left",
        "content": {
          "type": "textblock",
          "horizontalAlignment": "center",
          "verticalAlignment": "center",
          "text": "◀"
        },
        "contentContainer": {
          "type": "panel",
          "horizontalAlignment": "stretch",
          "verticalAlignment": "stretch"
        },
        "height": 16,
        "width": 16,
        "padding": 0,
        "eventHandlers": {
          "onMouseButtonMove": {
            "type": "forward",
            "elementType": "scrollbar",
            "event": "onDecMouseButtonMove"
          }
        }
      },
      "incButton": {
        "type": "button",
        "_dock": "right",
        "content": { "type": "textblock", "horizontalAlignment": "center","verticalAlignment": "center", "text":"▶" },
        "contentContainer": {
          "type": "panel",
          "horizontalAlignment": "stretch",
          "verticalAlignment": "stretch"
        },
        "height": 16,
        "width": 16,
        "padding": 0,
        "eventHandlers": {
          "onMouseButtonMove": {
            "type": "forward",
            "elementType": "scrollbar",
            "event": "onIncMouseButtonMove"
          }
        }
      },
      "slider": {
        "type": "slider",
        "_dock": "left",
        "fromEdge": "left",
        "horizontalAlignment": "stretch",
        "height": 16,
        "handle": {
          "height": 16,
          "width": 16
        },
        "eventHandlers": {
          "onValueChanged": {
            "type": "forward",
            "elementType": "scrollbar",
            "event": "onValueChanged"
          }
        }
      }
    },
    "scrollbarVertical": {
      "jsonTemplate": "scrollbar",
      "width": 16,
      "fromEdge": "top",
      "font": {
        "face": "Arial",
        "height": 8,
        "fixed": false,
        "bold": false
      },
      "incButton": {
        "type": "button",
        "_dock": "top",
        "content": { "type": "textblock", "horizontalAlignment": "center","verticalAlignment": "center", "text":"▲" },
        "contentContainer": {
          "type": "panel",
          "horizontalAlignment": "stretch",
          "verticalAlignment": "stretch"
        },
        "height": 16,
        "width": 16,
        "padding": 0,
        "eventHandlers": {
          "onMouseButtonMove": {
            "type": "forward",
            "elementType": "scrollbar",
            "event": "onDecMouseButtonMove"
          }
        }
      },
      "decButton": {
        "type": "button",
        "_dock": "bottom",
        "content": { "type": "textblock", "horizontalAlignment": "center","verticalAlignment": "center", "text":"▼" },
        "contentContainer": {
          "type": "panel",
          "horizontalAlignment": "stretch",
          "verticalAlignment": "stretch"
        },
        "height": 16,
        "width": 16,
        "padding": 0,
        "eventHandlers": {
          "onMouseButtonMove": {
            "type": "forward",
            "elementType": "scrollbar",
            "event": "onIncMouseButtonMove"
          }
        }
      },
      "slider": {
        "type": "slider",
        "_dock": "top",
        "verticalAlignment": "stretch",
        "fromEdge": "top",
        "width": 16,
        "handle": {
          "height": 16,
          "width": 16
        },
        "eventHandlers": {
          "onValueChanged": {
            "type": "forward",
            "elementType": "scrollbar",
            "event": "onValueChanged"
          }
        }
      }
    },
    "scrollviewer": {
      "horizontalBar": {
        "jsonTemplate": "scrollbarHorizontal",
        "eventHandlers": {
          "onValueChanged": {
            "type": "forward",
            "elementType": "scrollviewer",
            "event": "onHorizontalValueChanged"
          }
        }
      },
      "verticalBar": {
        "jsonTemplate": "scrollbarVertical",
        "eventHandlers": {
          "onValueChanged": {
            "type": "forward",
            "elementType": "scrollviewer",
            "event": "onVerticalValueChanged"
          }
        }
      },
      "horizontalScroll": "auto",
      "verticalScroll": "auto"
    },
    "slider": {
      "minValue": 0,
      "maxValue": 100,
      "borderThickness": 1,
      "borderBrush": { "color": [ 1.0, 1.0, 1.0 ] },
      "handle": {
      }
    },
    "slider.handle": {
      "type": "border",
      "borderThickness": 2,
      "borderBrush": { "color": [ 1.0, 1.0, 1.0 ] },
      "backgroundBrush": { "color": [ 0.5, 0.5, 0.5 ] },
      "height": 20,
      "width": 20,
      "eventHandlers": {
        "onMouseMove": {
          "type": "forward",
          "elementType": "slider",
          "event": "onHandleMouseMove"
        },
        "onMouseButtonMove": {
          "type": "forward",
          "elementType": "slider",
          "event": "onHandleMouseButtonMove"
        }
      }
    },
    "tab": {
      "type": "tab",
      "headerContainer": {
        "type": "border",
        "padding": [ 5, 3, 5, 3 ],
        "margin": [ 0, 0, 1, 0 ],
        "verticalAlignment": "bottom",
        "borderThickness": 1,
        "borderBrush": { "color": [ 1.0, 1.0, 1.0 ] },
        "eventHandlers": {
          "onMouseButtonMove": {
            "type": "forward",
            "elementType": "tabcontrol",
            "event": "onTabHeaderMouseButtonMove"
          }
        },
        "hooks": {
          "onSelected": {
            "elementType": "tab",
            "event": "onSelected",
            "eventHandler": {
              "type": "style",
              "styleName": "onSelected"
            }
          },
          "onDeselected": {
            "elementType": "tab",
            "event": "onDeselected",
            "eventHandler": {
              "type": "style",
              "styleName": "onDeselected"
            }
          }
        },
        "styles": {
          "onSelected": {
            "font": {
              "bold": true
            },
            "color": [ 1.0, 1.0, 0 ],
            "borderThickness": 2
          },
          "onDeselected": {
            "font": {
              "bold": false
            },
            "color": [ 1.0, 1.0, 1.0 ],
            "borderThickness": 1
          }
        }
      },
      "contentContainer": {
        "type": "panel"
      }
    },
    "tabcontrol": {
      "headerContainer": {
        "type": "dockpanel"
      },
      "contentContainer": {
        "type": "panel",
        "borderThickness": 1,
        "borderBrush": { "color": [ 1.0, 1.0, 1.0 ] },
        "minHeight": 10,
        "minWidth": 10,
        "padding": 3
      }
    },
    "textbox": {
      "borderThickness": 1,
      "borderBrush": { "color": [ 1.0, 1.0, 1.0 ] },
      "backgroundBrush": { "color": [ 0, 0, 0 ] },
      "cursor": {
        "backgroundBrush": { "color": [ 0.8, 0.8, 0.8 ] }
      },
      "selectionBrush": { "color": [ 0.5, 0.2, 0.2, 0.8 ] },
      "contentContainer": {
        "type": "scrollviewer",
        "horizontalAlignment": "stretch",
        "verticalAlignment": "stretch"
      },
      "content": {
        "type": "textblock",
        "padding": 2,
        "lavishscript": { "parse": false }
      },
      "contextMenu": {
        "type": "contextmenu",
        "eventHandlers": {
          "onItemSelected": {
            "type": "forward",
            "elementType": "textbox",
            "event": "onContextMenuItemSelected"
          }
        },
        "items": [
          "Cut",
          "Copy",
          "Paste",
          "Select All"
        ]
      }
    },
    "commandbox": {
      "jsonTemplate": "textbox",
      "minSize": [ 12, 22 ],
      "multiline": false
    },
    "videofeed": {
      "horizontalAlignment": "center",
      "verticalAlignment": "center",
      "hooks": {
        "onScreenRenderedChildren": {
          "elementType": "screen",
          "event": "onRenderedChildren",
          "flags": "ancestor",
          "eventHandler": {
            "type": "forward",
            "flags": "self",
            "event": "onScreenRenderedChildren"
          }
        }
      }
    },
    "window": {
      "borderThickness": 2,
      "borderBrush": { "color": [ 1.0, 1.0, 1.0 ] },
      "backgroundBrush": { "color": [ 0, 0, 0 ] },
      "contentContainer": {
        "type": "panel",
        "padding": 2
      },
      "titleBar": {
        "jsonTemplate": "window.titleBar"
      }
    },
    "window.title": {
      "verticalAlignment": "center",
      "margin": [ 5, 0, 0, 0 ]
    },
    "window.titleBar": {
      "type": "dockpanel",
      "children": [      
        {
          "type": "button",
          "_dock": "right",
          "borderThickness": 1,
          "borderColor": [ 1, 1, 1, 1 ],
          "content": "x",
          "padding": 3,
          "eventHandlers": {
            "onMouseButtonMove": {
              "type": "forward",
              "elementType": "window",
              "event": "onCloseButtonClick"
            }
          }
        },
        {
          "type": "button",
          "_dock": "right",
          "borderThickness": 1,
          "borderColor": [ 1, 1, 1, 1 ],
          "content": "_",
          "padding": 3,
          "eventHandlers": {
            "onMouseButtonMove": {
              "type": "forward",
              "elementType": "window",
              "event": "onShadeButtonClick"
            }
          }
        }
      ],
      "backgroundBrush": {
        "color": [ 0, 0, 0.4 ]
      },
      "eventHandlers": {
        "onMouseMove": {
          "type": "forward",
          "elementType": "window",
          "event": "onHeaderMouseMove"
        },
        "onMouseButtonMove": {
          "type": "forward",
          "elementType": "window",
          "event": "onHeaderMouseButtonMove"
        }
      }
    }
  }
}  
